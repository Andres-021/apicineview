
<header>
  <%- include('./partials/navBar', {user: user}); %>
</header>

<div class="principal">
  
  <div class="div-row-content-user">
    <div class="div-row-user-item1">
      <form action="/users/search" method="GET" class="">
        <input type="search" name="search" placeholder="Buscar">
      </form>
      <div class="div-wrapper">
        <a class="" href="/users">Todos</a>
      </div>
    </div>
  
    <div class="div-row-user-item2">
      <table class="users-table">
        <tr>
          <th>Correo</th>
          <th>Nombre</th>
          <th>Apellido</th>
          <th>Genero</th>
          <th>Rol</th>
          <th>Fecha de creacion</th>
          <th colspan="2">Opciones</th>
        </tr>
        <% if(typeof users != "undefined"){ %>
          <% users.forEach((user)=>{%>
            <tr>
              <td><%= user.email %></td>
              <td><%= user.name %></td>
              <td><%= user.surname %></td>
              <td><%= user.gender %></td>
              <td><%= user.rol %></td>
              <td><%= user.date_of_creation %></td>
              <td><input type="submit" name="" class="btn-primary" value="Editar"></td>
              <td><input type="submit" name="" class="btn-cancel" value="Eliminar"></td>
            </tr>
          <% })%>
        <% } %>
      </table>
    </div>
  </div>  

</div>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <% if(typeof alert != "undefined"){%>

    <script>
      Swal.fire({
        width: 'auto',
        padding: '',
        title: '<%= alertTitle %>',
        icon: '<%= alertIcon %>',
        showConfirmButton: '<%= showConfirmButton %>',
        timer: '<%= timer %>',
      })
    </script>
    <% } %>